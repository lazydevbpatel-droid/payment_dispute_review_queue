<div class="edit-user-container">
  <div class="edit-user-card">
    <h1>Create User</h1>

    <% if @user.errors.any? %>
      <div class="errors">
        <p><strong><%= pluralize(@user.errors.count, "error") %> prevented saving:</strong></p>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_with model: [:admin, @user], url: admin_users_path, local: true do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email %>
      </div>

      <div class="form-group">
        <%= f.label :role %>
        <%= f.select :role, User.roles.keys.map { |r| [r.titleize, r] } %>
      </div>

      <div class="form-group">
        <%= f.label :time_zone %>
        <%= f.text_field :time_zone, placeholder: "Asia/Kolkata" %>
      </div>

      <div class="form-actions">
        <%= link_to "Cancel", root_path, class: "btn-primary" %>
        <%= f.submit "Create User", class: "btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
